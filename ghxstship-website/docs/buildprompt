### Typography Component Example
```typescript
// components/ui/Typography.tsx

interface TypographyProps {
  variant: 'hero' | 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6' | 'body' | 'meta'
  children: React.ReactNode
  className?: string
  uppercase?: boolean
}

export function Typography({ 
  variant, 
  children, 
  className,
  uppercase = false 
}: TypographyProps) {
  const baseClasses = {
    hero: 'font-anton text-hero leading-none',
    h1: 'font-anton text-h1 leading-tight',
    h2: 'font-bebas text-h2 leading-tight tracking-wide',
    h3: 'font-bebas text-h3 leading-tight tracking-wide',
    h4: 'font-bebas text-h4 leading-normal tracking-wide',
    h5: 'font-bebas text-h5 leading-normal tracking-wide',
    h6: 'font-bebas text-h6 leading-normal tracking-wide',
    body: 'font-share text-body leading-relaxed',
    meta: 'font-share-mono text-meta leading-normal tracking-widest',
  }

  const Component = variant === 'body' ? 'p' : 
                    variant === 'meta' ? 'span' : variant

  return (
    <Component 
      className={`
        ${baseClasses[variant]}
        ${uppercase ? 'uppercase' : ''}
        ${className}
      `}
    >
      {children}
    </Component>
  )
}
```

